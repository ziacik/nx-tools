{
	"name": "upgrade-verify",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "packages/upgrade-verify/src",
	"projectType": "library",
	"targets": {
		"build": {
			"executor": "@nx/js:swc",
			"outputs": ["{options.outputPath}"],
			"options": {
				"outputPath": "dist/packages/upgrade-verify",
				"main": "packages/upgrade-verify/src/index.ts",
				"tsConfig": "packages/upgrade-verify/tsconfig.lib.json",
				"assets": [
					"packages/upgrade-verify/*.md",
					{
						"input": "./packages/upgrade-verify/src",
						"glob": "**/!(*.ts)",
						"output": "./src"
					},
					{
						"input": "./packages/upgrade-verify/src",
						"glob": "**/*.d.ts",
						"output": "./src"
					},
					{
						"input": "./packages/upgrade-verify",
						"glob": "generators.json",
						"output": "."
					},
					{
						"input": "./packages/upgrade-verify",
						"glob": "executors.json",
						"output": "."
					}
				],
				"updateBuildableProjectDepsInPackageJson": true
			}
		},
		"publish": {
			"command": "node tools/scripts/publish.mjs upgrade-verify {args.ver} {args.tag}",
			"dependsOn": ["build"]
		},
		"lint": {
			"executor": "@nx/linter:eslint",
			"outputs": ["{options.outputFile}"],
			"options": {
				"lintFilePatterns": ["packages/upgrade-verify/**/*.ts", "packages/upgrade-verify/package.json", "packages/upgrade-verify/executors.json"]
			}
		},
		"test": {
			"executor": "@nx/jest:jest",
			"outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
			"options": {
				"jestConfig": "packages/upgrade-verify/jest.config.ts",
				"passWithNoTests": true
			},
			"configurations": {
				"ci": {
					"ci": true,
					"codeCoverage": true
				}
			}
		}
	},
	"tags": []
}
