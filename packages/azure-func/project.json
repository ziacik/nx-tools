{
	"name": "azure-func",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "packages/azure-func/src",
	"projectType": "library",
	"targets": {
		"build": {
			"executor": "@nx/js:swc",
			"outputs": ["{options.outputPath}"],
			"options": {
				"outputPath": "dist/packages/azure-func",
				"main": "packages/azure-func/src/index.ts",
				"tsConfig": "packages/azure-func/tsconfig.lib.json",
				"assets": [
					"packages/azure-func/*.md",
					{
						"input": "./packages/azure-func/src",
						"glob": "**/!(*.ts)",
						"output": "./src"
					},
					{
						"input": "./packages/azure-func/src",
						"glob": "**/*.d.ts",
						"output": "./src"
					},
					{
						"input": "./packages/azure-func",
						"glob": "generators.json",
						"output": "."
					},
					{
						"input": "./packages/azure-func",
						"glob": "executors.json",
						"output": "."
					},
					{
						"input": "./packages/azure-func",
						"glob": "migrations.json",
						"output": "."
					}
				]
			}
		},
		"publish": {
			"command": "node tools/scripts/publish.mjs azure-func {args.ver} {args.tag}",
			"dependsOn": ["build"]
		},
		"lint": {
			"executor": "@nx/eslint:lint",
			"outputs": ["{options.outputFile}"],
			"options": {
				"lintFilePatterns": [
					"packages/azure-func/**/*.ts",
					"packages/azure-func/package.json",
					"packages/azure-func/generators.json",
					"packages/azure-func/executors.json"
				]
			}
		},
		"test": {
			"executor": "@nx/jest:jest",
			"outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
			"options": {
				"jestConfig": "packages/azure-func/jest.config.ts",
				"passWithNoTests": true
			},
			"configurations": {
				"ci": {
					"ci": true,
					"codeCoverage": true
				}
			}
		},
		"typecheck:specs": {
			"executor": "nx:run-commands",
			"outputs": [],
			"options": {
				"command": "tsc --noEmit -p packages/azure-func/tsconfig.spec.json"
			}
		}
	},
	"tags": []
}
